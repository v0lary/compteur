<body>
    <div class="container">
        
        <div id="win-display">0/10</div>
        
        <div id="manual-controls">
            <h2>⚙️ CONTRÔLES AVANCÉS</h2>
            <p>
                **Définir l'Objectif :** <br>
                <input type="number" id="target-input" value="10" min="1">
                <button onclick="setTarget()" class="set-btn">Définir</button>
            </p>
            <p>
                **Compte Actuel (Manuel) :** <br>
                <input type="number" id="manual-count-input" value="0">
                <button onclick="setManualCount()" class="set-btn">Appliquer</button>
            </p>
        </div>

        <h2>AJOUT RAPIDE</h2>
        <div class="controls">
            <button class="add-btn" onclick="updateCounter(1)">+1</button>
            <button class="add-btn" onclick="updateCounter(5)">+5</button>
            <button class="add-btn" onclick="updateCounter(50)">+50</button>
        </div>

        <h2>ENLÈVEMENT RAPIDE</h2>
        <div class="controls">
            <button class="remove-btn" onclick="updateCounter(-1)">-1</button>
            <button class="remove-btn" onclick="updateCounter(-5)">-5</button>
            <button class="remove-btn" onclick="updateCounter(-50)">-50</button>
        </div>

        <h2>RÉINITIALISER LE COMPTEUR</h2>
        <div class="controls">
            <button class="reset-btn" onclick="resetCounter()">RESET (0)</button>
        </div>
    </div>

    <script>
        // JAVASCRIPT
        let currentWins = 0;
        let targetWins = 10;
        
        const display = document.getElementById('win-display');
        const targetInput = document.getElementById('target-input');
        const manualCountInput = document.getElementById('manual-count-input');

        const COLOR_DEFAULT = '#3498db'; /* Bleu */
        const COLOR_SUCCESS = '#2ecc71'; /* Vert */
        const COLOR_NEGATIVE = '#e74c3c'; /* Rouge */

        function renderDisplay() {
            let displayColor = COLOR_DEFAULT;
            
            if (currentWins >= targetWins) {
                displayColor = COLOR_SUCCESS;
            } else if (currentWins < 0) {
                displayColor = COLOR_NEGATIVE;
            }

            // Mise à jour de l'affichage avec la nouvelle couleur
            display.innerHTML = `<span style="color: ${displayColor};">${currentWins}/${targetWins}</span>`;
            display.style.borderColor = displayColor;
        }

        function updateCounter(change) {
            currentWins += change;
            manualCountInput.value = currentWins;
            renderDisplay();
        }

        function resetCounter() {
            currentWins = 0;
            manualCountInput.value = 0;
            renderDisplay();
        }

        function setTarget() {
            const newTarget = parseInt(targetInput.value);
            if (!isNaN(newTarget) && newTarget > 0) {
                targetWins = newTarget;
                renderDisplay();
            } else {
                targetInput.value = targetWins;
            }
        }
        
        function setManualCount() {
            const newCount = parseInt(manualCountInput.value);
            if (!isNaN(newCount)) {
                currentWins = newCount;
                renderDisplay();
            } else {
                manualCountInput.value = currentWins;
            }
        }

        document.addEventListener('DOMContentLoaded', renderDisplay);
    </script>
</body>
